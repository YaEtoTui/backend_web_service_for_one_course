<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="2023-07-04-17-07" author="SazhinEA" context="campus">

        <createSequence sequenceName="hibernate_sequence" startValue="1" incrementBy="1"/>

        <createTable tableName="cabinet">

            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>

            <column name="number" type="varchar">
                <constraints nullable="false"/>
            </column>

            <column name="floor" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="x" type="int4">
                <constraints nullable="false"/>
            </column>

            <column name="y" type="int4">
                <constraints nullable="false"/>
            </column>

            <column name="campus_id" type="varchar">
                <constraints foreignKeyName="cabinet_campus_fk"
                             referencedTableName="campus"
                             referencedColumnNames="id"/>
            </column>

        </createTable>

        <sql>
            insert into cabinet values(1, 243, 2, 150, 1828, 'irit'),
                                      (2, 117, 1, 1000, 2000, 'irit'),
                                      (3, 245, 2, 1774, 1398, 'irit')
        </sql>

    </changeSet>

</databaseChangeLog>