<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="2023-07-04-17-07" author="SazhinEA" context="campus">

        <createSequence sequenceName="hibernate_sequence" startValue="1" incrementBy="1"/>

        <createTable tableName="cabinet">

            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>

            <column name="number" type="int4">
                <constraints nullable="false"/>
            </column>

            <column name="campus_id" type="bigint">
                <constraints foreignKeyName="cabinet_campus_fk"
                             referencedTableName="campus"
                             referencedColumnNames="id"/>
            </column>

        </createTable>

        <sql>
            insert into cabinet values(2, 1, 1),
                                      (7, 2, 1)
        </sql>

    </changeSet>

</databaseChangeLog>